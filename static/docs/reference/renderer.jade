		//- Syntax
		section.syntax
			h2#syntax Sintaxis
			codesyntax.
				var msg = "making";

			:markdown
				Lorem ipsum

			:highlight(lang='javascript')
				var msg = "making";



		//- Description
		section.description
			h2#description Descripción
			:markdown
				Lorem ipsum
			
						
		//- Properties
		section.properties
			h2#properties Propiedades
		

			//- Property
			section.property
				h3#property-xx: code
					small renderer
					| .xx

				//- Property description
				section.description
					:markdown
						Lorem ipsum

		//- Methods
		section.methods
			h2#methods Métodos

			//- Method			
			section.method
				h3#method-removeRoute: code
					small renderer
					| .xx()

				//- Method description
				section.description
					:markdown
						Lorem ipsum

